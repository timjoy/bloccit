<h1>New Advertisement</h1>
<div class="advertisement">
    <p>Guidelines for advertisements</p>
    <ul>
      <li>1. Don't offend/insult people.</li>
      <li>2. Make it fun; don't be boring.</li>
    </ul>
  <div class="col-md-8">
    <%= form_for @advertisement do |f| %>
      <div class="form-group">

        <%= f.label :title %>

        <%= f.text_field :title, class: 'form-control', placeholder: "Enter advertisement title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 11, class: 'form-control', placeholder: "Enter advertisement body" %>
      </div>
      <div class="form-group">

        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
<!-- use #sanitize from ActionView::Helpers::SanitizeHelper to clean up copy/pasted ads -->

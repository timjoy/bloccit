<h1>All Posts</h1>

<div class="col-md-4">
  <%= link_to "Create a post.", new_post_path(@post), class: 'btn btn-success' %>
</div>

<% @posts.each do |post| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <%= link_to post.title, post %>
      </h4>
    </div>
  </div>
<% end %>
